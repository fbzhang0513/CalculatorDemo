<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/page_margin_horizontal"
              android:paddingRight="@dimen/page_margin_horizontal"
        >

    <TextView
            android:text="@string/input_calculation_expression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_vertical"
            android:textSize="@dimen/font_size_prompt"/>

    <EditText android:id="@+id/et_input_expression"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/item_margin_vertical"
              android:textSize="@dimen/font_size_prompt"
              android:inputType="text"
              android:textColor="@color/orange"/>
    <TextView
            android:text="@string/the_result_is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_vertical"
            android:textSize="@dimen/font_size_prompt"/>
    <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_vertical"
            android:textSize="@dimen/font_size_result"
            android:textColor="@color/orange"/>

    <Button android:id="@+id/btn_calculate"
            android:layout_width="@dimen/btn_size_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_vertical"
            android:layout_gravity="center_horizontal"
            android:text="@string/calculate"
            android:textSize="@dimen/font_size_prompt"/>

</LinearLayout>
